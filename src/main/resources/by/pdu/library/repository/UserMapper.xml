<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="by.pdu.library.repository.UserMapper">
    <resultMap id="userResultMap" type="by.pdu.library.domain.User">
        <result column="card_id" property="cardId"/>
        <result column="user_login" property="login"/>
        <result column="user_password" property="password"/>
        <result column="user_email" property="email"/>
        <result column="user_notValid" property="notValid"/>
    </resultMap>

    <update id="updateUser">
        UPDATE USERS
        SET
            PASSWORD = #{password}
        WHERE email = #{email}
    </update>

    <select id="searchUser" resultMap="userResultMap">
        SELECT
            card_id as "card_id",
            login as "user_login",
            password as "user_password",
            email as "user_email"
        FROM
            USERS
        WHERE
            login = #{search} OR
            email = #{search}
    </select>

    <update id="updatePassword">
        UPDATE
            USERS
        SET
            PASSWORD = #{password}
        WHERE
            EMAIl= #{email}
    </update>

</mapper>